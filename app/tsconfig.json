{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es6"],
    "baseUrl": ".",
    "paths": {
      "@mockups/*": ["src/mockups/*"],
      "@components/*": ["src/components/*"],
      "@app/*": ["src/app/*"],
      "@views/*": ["src/views/*"],
      "@styles/*": ["styles"],
      "@api/*": ["src/api/*"],
      "@helpers/*": ["src/helpers/*"],
      "@assets/*": ["src/assets/*"]
    },
    "types": ["react"],
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/**.ts",
    "**/**.tsx",
    ".expo/types/**/**.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
