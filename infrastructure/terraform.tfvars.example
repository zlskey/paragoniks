# Example Terraform variables file
# Copy to terraform.tfvars and customize for your environment

# Required variables
project_id              = "your-gcp-project-id"
mongodb_url             = "mongodb://username:password@host:port/db?options"
mongodb_root_username   = "root_username"
mongodb_root_password   = "root_password"
jwt_secret              = "your_jwt_secret"
openai_api_key          = "your-openai-api-key-here"

# Optional variables with defaults
region                  = "europe-west3"
zone                    = "europe-west3-a"
api_image_name          = "paragoniks-api"
api_service_name        = "paragoniks-api"
cors_origin             = "https://paragoniks.pl"
main_domain             = "paragoniks.pl"
node_env                = "production"
port                    = "8080" 